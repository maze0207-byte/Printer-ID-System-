{
  "name": "id-forge-desktop",
  "version": "1.0.0",
  "description": "SEU ID Card Management System - Desktop Application",
  "main": "dist/main.js",
  "author": "Saxony Egypt University",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "electron .",
    "dev": "tsc && electron .",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.seu.idforge",
    "productName": "ID Forge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "extraResources": [
      {
        "from": "../client/dist",
        "to": "app/dist"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    }
  },
  "dependencies": {
    "sql.js": "^1.10.3",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5"
  }
}
